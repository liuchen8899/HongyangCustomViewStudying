<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.edu.jlnu.customview_03.MainActivity">

    <cn.edu.jlnu.customview_03.CustomProgressBar
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:firstColor="#ff1347"
        app:secondColor="#238899"
        app:circleWidth="30dp"
        app:speed="100"
        />

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ff9765"/>

    <cn.edu.jlnu.customview_03.CustomProgressBar
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:firstColor="#123456"
        app:secondColor="#987654"
        app:circleWidth="10dp"
        app:speed="500"
        />
</LinearLayout>
